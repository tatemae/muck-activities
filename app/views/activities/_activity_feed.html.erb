<div id="activity-feed">
  <div id="activity-feed-content">
    <%= cached_activities(activities, limited) %>
  </div>
</div>
<%= will_paginate activities, :previous_label => t('muck.activities.paging_newer'), :next_label => t('muck.activities.paging_older') -%>
<% content_for :javascript do -%>
  jQuery(document).ready(function(){
    <% if GlobalConfig.enable_live_activity_updates -%>
    setInterval(function() {jQuery.ajax({success:function(request){update_feed(request);}, type: "GET", url:'<%= activities_path(:parent_id => activities_object, :parent_type => activities_object.class, :activity_filter => params[:activity_filter], :format => 'js') %>&amp;latest_activity_id=' + get_latest_activity_id()})}, <%=GlobalConfig.live_activity_update_interval%> * 1000)
    <% end -%>
  });
<% end -%>
<%= activity_scripts %>
